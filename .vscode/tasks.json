{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "odin build",
      "type": "shell",
      "linux": {
        "command": "./build.sh"
      },
      "windows": {
        "command": ".\\build.bat"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      },
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*)\\((\\d+):(\\d+)\\)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Build"
    },
    {
      "type": "cargo",
      "command": "run",
      "label": "Execute rust",
      "args": ["--", "input", "page-plain.html"]
    },
    {
      "type": "process",
      "windows": {
        "command": "out/htmlrc.exe"
      },
      "label": "Execute",
      "args": ["input", "page-plain.html"]
    }
  ]
}
